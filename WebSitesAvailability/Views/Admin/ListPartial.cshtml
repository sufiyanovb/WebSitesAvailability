@model IEnumerable<Sites>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Сайт</th>
                    <th>Дата последней проверки</th>
                    <th>Доступность</th>
                    <th>Действия</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr id="tr-@item.Id">
                    <td>@(item.Id)</td>
                    <td>
                        <a href="@item.Url" target="_blank">@item.Url</a>
                    </td>
                    <td>@item.CheckDate</td>
                    <td class="text-center">
                        @((item.IsAvailable? "✓" : "-"))
                    </td>
                    <td>
                        <a class='btn btn-danger btn-sm' style='margin-left:5px' onclick="Delete(@item.Id)"><i class='fa fa-trash'></i> Удалить</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
